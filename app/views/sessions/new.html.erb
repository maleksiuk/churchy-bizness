
<div class="container">

  <%= form_tag sessions_path do %>
    <h2 class="form-signin-heading">Please sign in</h2>    
	<%= text_field_tag :username, params[:username], :class => "input-block-level", :placeholder => "User name" %>
	<%= password_field_tag :password, nil, { :class => "input-block-level", :placeholder => "Password" } %>
	
    <%= submit_tag "Log in", :class => "btn btn-large btn-primary" %>
  <% end %>

</div>